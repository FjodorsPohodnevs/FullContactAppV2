    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_height_company_email_url_layout"
    android:layout_marginLeft="@dimen/margin_left_company_email_url_layout"
    android:layout_marginRight="@dimen/margin_right_company_email_url_layout"
    android:layout_marginTop="@dimen/margin_top_company_email_url_layout"
    android:orientation="vertical">


    <TextView
        android:id="@+id/urlEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="email|web"
        android:textSize="@dimen/text_size_company_email_url"
        tools:text="http://template.url.lv/" />

</LinearLayout>